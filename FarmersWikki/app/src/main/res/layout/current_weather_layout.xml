<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        >

    <com.app.farmerswikki.util.custom.TextViewLatoThin
        android:id="@+id/textViewCurrentTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/_75sdp"

        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <com.app.farmerswikki.util.custom.TextViewLatoThin
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u00b0"
                android:textColor="@color/white"
                android:textSize="@dimen/_30sdp"
                android:layout_gravity="top"
                />

        </LinearLayout>


        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
       >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/arrow_up"
            android:layout_marginEnd="@dimen/_1sdp"
            android:tint="@color/colorGolden"/>

        <com.app.farmerswikki.util.custom.TextViewLatoThin
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/textViewMaxTemp"
           />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.app.farmerswikki.util.custom.TextViewLatoThin
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u00b0"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="top"
                />

      </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        >



        <ImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/arrow_down"
            android:layout_marginEnd="@dimen/_1sdp"
            android:tint="@color/info_color"/>




        <com.app.farmerswikki.util.custom.TextViewLatoThin
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/textViewMinTemp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.app.farmerswikki.util.custom.TextViewLatoThin
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\u00b0"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:layout_gravity="top"
                />

        </LinearLayout>


    </LinearLayout>

    <!--<com.app.farmerswikki.util.custom.TextViewLatoThin
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20sdp"
        android:text="(Actual Temp)"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:id="@+id/textViewFeelsLike"
        />-->


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/art_clouds"
            android:id="@+id/imageViewDesc"
            />

        <com.app.farmerswikki.util.custom.TextViewLatoThin
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_15sdp"
            android:id="@+id/textViewDesc"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:orientation="horizontal">


        <com.app.farmerswikki.util.custom.TextViewLatoThin
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            android:id="@+id/textViewLastUpdated"
            />


    </LinearLayout>



</LinearLayout>
