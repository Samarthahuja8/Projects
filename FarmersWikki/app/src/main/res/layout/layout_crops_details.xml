<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/krishiVigyanKendraLinearLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/_1sdp"
    android:paddingRight="@dimen/_1sdp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        card_view:cardCornerRadius="2dp"
        app:contentPadding="@dimen/_5sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardBackgroundColor="@color/background_color"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >


            <com.app.farmerswikki.util.custom.TextViewBold
                android:id="@+id/cropsNameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/_8sdp"
                android:padding="@dimen/_2sdp"
                android:textSize="15sp"
                android:text="Crops Name"
                android:textColor="@color/bluish_brown"
                android:gravity="center|center_vertical"

                />

            <com.app.farmerswikki.util.custom.TextViewRegular
                android:id="@+id/cultivationSeasonTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8dp"
                android:padding="@dimen/_10sdp"
                android:textSize="12sp"
                android:text="Cultivation Season"
                android:gravity="center|center_vertical"
                android:textColor="@color/bluish_brown"
                android:textStyle="bold"
                />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
