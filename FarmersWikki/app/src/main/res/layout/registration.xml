<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <LinearLayout
            android:id="@+id/layout_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_40sdp"
            android:paddingRight="@dimen/_40sdp">

            <RelativeLayout
                android:id="@+id/spinnerSelectTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height_40dp"
                android:layout_below="@+id/name_linear"
                android:layout_marginTop="@dimen/login_top"
                android:background="@drawable/edittext_border"
                android:gravity="center"

                >

                <Spinner
                    android:id="@+id/title_sp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_of_layout"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:entries="@array/titleArray"
                    android:gravity="center_vertical" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/userFirstName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height_40dp"
                android:layout_below="@+id/name_linear"
                android:layout_marginTop="@dimen/login_top"
                android:background="@drawable/edittext_border"
                android:gravity="center"

                >


                <ImageView
                    android:id="@+id/user_first_name_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:gravity="center"
                    android:src="@drawable/first_name_icon"
                    android:visibility="visible" />

                <com.app.farmerswikki.util.custom.EditTextRegular
                    android:id="@+id/edit_text_fname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_toEndOf="@+id/user_first_name_icon"
                    android:layout_toRightOf="@+id/user_first_name_icon"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="First Name"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:singleLine="true"
                    android:textColor="@color/bluish_brown"
                    android:textColorHint="@color/textcolorhint"
                    android:textSize="@dimen/text_size_13sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/userSecondName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height_40dp"
                android:layout_below="@+id/name_linear"
                android:layout_marginTop="@dimen/login_top"
                android:background="@drawable/edittext_border"
                android:gravity="center"

                >


                <ImageView
                    android:id="@+id/user_sec_name_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:gravity="center"
                    android:src="@drawable/first_name_icon"
                    android:textSize="@dimen/text_size_20sp"
                    android:visibility="visible" />

                <com.app.farmerswikki.util.custom.EditTextRegular
                    android:id="@+id/edit_text_sec_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_toEndOf="@+id/user_sec_name_icon"
                    android:layout_toRightOf="@+id/user_sec_name_icon"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="Last Name"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:singleLine="true"
                    android:textColor="@color/bluish_brown"
                    android:textColorHint="@color/textcolorhint"
                    android:textSize="@dimen/text_size_13sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height_40dp"
                android:layout_below="@+id/name_linear"
                android:layout_marginTop="@dimen/login_top"
                android:background="@drawable/edittext_border"
                android:gravity="center"

                >


                <ImageView
                    android:id="@+id/email_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:gravity="center"
                    android:src="@drawable/email_logo"
                    android:textSize="@dimen/text_size_20sp"
                    android:visibility="visible" />

                <com.app.farmerswikki.util.custom.EditTextRegular
                    android:id="@+id/email_id_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_toEndOf="@+id/email_icon"
                    android:layout_toRightOf="@+id/email_icon"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:singleLine="true"
                    android:textColor="@color/bluish_brown"
                    android:textColorHint="@color/textcolorhint"
                    android:textSize="@dimen/text_size_13sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/password_sub_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height_40dp"
                android:layout_below="@+id/email"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@drawable/edittext_border"
                android:gravity="center">


                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_10dp"
                    android:gravity="center"
                    android:src="@drawable/password_icon"
                    android:visibility="visible" />

                <com.app.farmerswikki.util.custom.EditTextRegular

                    android:id="@+id/editText_password_signup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/margin_10dp"
                    android:layout_toEndOf="@+id/user_icon"
                    android:layout_toRightOf="@+id/user_icon"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:maxLength="15"
                    android:paddingLeft="@dimen/padding_10dp"
                    android:singleLine="true"
                    android:textColor="@color/bluish_brown"
                    android:textColorHint="#bfbfbf"
                    android:textSize="@dimen/text_size_13sp" />

            </RelativeLayout>


            <com.app.farmerswikki.util.custom.ButtonRegular
                android:id="@+id/regis_btn"
                style="@style/MaterialButton"
                android:layout_width="@dimen/button_mygarage_width"
                android:layout_height="@dimen/button_new_height"
                android:layout_below="@+id/confirm_password"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin_25dp"
                android:gravity="center"
                android:text="@string/registration_title" />


            <com.app.farmerswikki.util.custom.TextViewRegular
                android:id="@+id/login_here"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/login_top"
                android:gravity="center"
                android:text="@string/exist_login_here"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_15sp" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>

