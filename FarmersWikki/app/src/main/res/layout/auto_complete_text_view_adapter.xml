<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:id="@+id/textViewState"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:scrollHorizontally="true"
        android:text="State"
        android:textColor="@color/bluish_brown"
        android:textSize="14sp"
        android:textStyle="bold"

        />



    <TextView
        android:id="@+id/locationName"
        android:layout_toRightOf="@+id/textViewState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:scrollHorizontally="true"
        android:text="location"
        android:textColor="@color/color_grey"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewCapital"
        android:layout_below="@+id/locationName"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:scrollHorizontally="true"
        android:text="Capital"
        android:textColor="@color/bluish_brown"
        android:textSize="14sp"
        android:textStyle="bold"

        />


    <TextView
        android:id="@+id/capital"
        android:layout_below="@+id/locationName"
        android:layout_toRightOf="@+id/textViewCapital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:scrollHorizontally="true"
        android:text="capital"
        android:textColor="@color/color_grey"
        android:textSize="14sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/capital"
        android:background="@drawable/silver_line"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

    </View>

</RelativeLayout>
