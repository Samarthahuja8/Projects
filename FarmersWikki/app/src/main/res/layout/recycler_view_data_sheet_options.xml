<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.app.farmerswikki.util.custom.TextViewRegular
                android:id="@+id/item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:text="Items"
                android:textColor="@color/colorGolden"
                android:textSize="20sp" />

            <com.app.farmerswikki.util.custom.TextViewBold
                android:id="@+id/notificationCountTv"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:background="@drawable/message"
                android:backgroundTint="@color/colorGolden"
                android:gravity="center"
                android:text="0"
                android:tint="@color/colorGolden"
                android:visibility="gone"
                android:textSize="@dimen/_8sdp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/logOut"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:src="@drawable/logout"
            android:tint="@color/colorGolden"
            android:visibility="gone" />


    </LinearLayout>

</LinearLayout>
